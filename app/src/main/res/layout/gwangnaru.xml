<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/card_view_interval"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="광나루 비행장"
                    android:textColor="@android:color/black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:padding="10dp"
                    android:text="광나루 비행장의 경우, 예약이 필요합니다. https://hangang.seoul.go.kr/archives/38748 를 눌러 예약해 주세요                (하루에 선착순 30명)" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="주파수 분포는 다음과 같습니다. 해당 표를 참고하여 겹치지 않는 방식으로 주파수를 선택해 주세요."
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="159dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/gwangnaru" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="광나루 비행장의 주파수 권장 값은 다음과 같습니다. "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="레이싱 드론: b5(Raceband) c1, c3, c6, c7 "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="회전익 드론, 고정익 드론: 위 주파수 분포도와 실시간 사용 정보를 확인하여 주파수가 겹치지 않도록 유의해주세요. "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="DJI드론계열(팬텀,매빅,인스파이어,스파크 등등)의 경우, 주파수를 많이 사용하므로 동시에 2대만 비행이 가능합니다. 실시간 DJI기체 비행 정보를 확인하여 비행해주세요. "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="다음 사진을 참고하여 다른 기체가 맞지 않는 구역으로 가지 않도록 부탁드립니다."
                    android:textSize="15dp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="293dp"
                    android:padding="10dp"
                    app:srcCompat="@drawable/gwangnaru2" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="실제 비행기(여객기), 군 헬기가 지나갈 때에는 즉시 비행을 멈추시길 바랍니다. "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="해당 실시간 모니터링 정보는 보조자료로 사용하시길 바랍니다. 겹치지 않는 주파수 대역이더라도, 다른 기체와 혼선이 일어난다면 즉시 변경하시길 바랍니다. "
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="한강 드론 공원의 관계자의 주파수 변경 요청이 있을 경우, 따라주시길 바랍니다. "
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="주파수 변경 불이행으로 인한 피해는 본인 뿐만 아니라, 타인에게도 전해짐을 명심하시길 바랍니다. "
                    android:textSize="15dp" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</LinearLayout>